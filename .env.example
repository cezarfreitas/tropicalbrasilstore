# Database Configuration
# Option 1: Complete DATABASE_URL (recommended for most platforms)
DATABASE_URL=mysql://username:password@host:port/database_name

# Option 2: Individual MySQL variables (for docker-compose or specific setups)
MYSQL_HOST=localhost
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=chinelos_store
MYSQL_PORT=3306

# Application Configuration
NODE_ENV=production
PORT=3000

# Optional Configuration
DB_CONNECTION_LIMIT=10
APP_NAME="Chinelos Store"
APP_VERSION="1.0.0"

# Docker Compose Specific (only if using docker-compose.yml)
DB_PASSWORD=secure_password_here
DB_ROOT_PASSWORD=secure_root_password_here
