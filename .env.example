# =============================================================================
# Chinelos Store - Environment Variables Template
# Copy this file to .env and configure your values
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Option 1: Single Database URL (RECOMMENDED for cloud platforms)
# DATABASE_URL=mysql://username:password@host:port/database_name
# Example: DATABASE_URL=mysql://chinelos_user:mypassword@localhost:3306/chinelos_store

# Option 2: Individual Database Variables (for Docker Compose)
DB_HOST=localhost
DB_PORT=3306
DB_USER=chinelos_user
DB_PASSWORD=your_secure_password_here
DB_NAME=chinelos_store
DB_ROOT_PASSWORD=your_root_password_here

# Database Connection Settings
DB_CONNECTION_LIMIT=10

# Legacy MySQL Variables (for backward compatibility)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=chinelos_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=chinelos_store

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production

# Server Port (optional - platforms usually provide this)
PORT=3000

# Application Info
APP_NAME="Chinelos Store"
APP_VERSION="1.0.0"

# =============================================================================
# DOCKER COMPOSE SPECIFIC VARIABLES
# =============================================================================

# External Port Mappings
APP_PORT=3000
# DB_PORT=3306

# Data Persistence Paths
DB_DATA_PATH=./data/mysql
UPLOAD_PATH=./data/uploads
UPLOAD_SERVER_PATH=./data/server-uploads

# Domain (for reverse proxy)
DOMAIN=localhost

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================

# JWT Secret (if implementing authentication)
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRES_IN=7d

# API Keys (if using external services)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# =============================================================================
# DEVELOPMENT CONFIGURATION (Optional)
# =============================================================================

# Debug Level
# DEBUG=false
# LOG_LEVEL=info

# =============================================================================
# CLOUD PLATFORM SPECIFIC VARIABLES
# =============================================================================

# Railway
# RAILWAY_ENVIRONMENT=production

# Render
# RENDER=true

# Fly.io
# FLY_APP_NAME=your-app-name

# =============================================================================
# EXAMPLE CONFIGURATIONS FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# LOCAL DEVELOPMENT
# NODE_ENV=development
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=password
# DB_NAME=chinelos_dev
# PORT=3000

# DOCKER COMPOSE
# NODE_ENV=production
# DB_HOST=db
# DB_USER=chinelos_user
# DB_PASSWORD=secure_password_123
# DB_NAME=chinelos_store
# DB_ROOT_PASSWORD=root_password_123

# CLOUD DEPLOYMENT (Railway/Render/Fly.io)
# NODE_ENV=production
# DATABASE_URL=mysql://user:pass@host:port/db
# (PORT is automatically provided by the platform)

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Edit the .env file with your actual values
# 3. NEVER commit the .env file to version control
# 4. For production, use strong passwords and secure credentials
# 5. For cloud deployments, prefer DATABASE_URL over individual variables
